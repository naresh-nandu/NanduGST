<script>
    //GSTR-3B SAVE AUTO POP UP DATA
    

    function Retrieve_GSTR3B_SA() {
        var period = $('#fpsave').val();
        var gstin = $('#gstin').val();
        $.ajax({
            type: 'POST',
            url: '@Url.Content("~")' + "GSTR3BUpload/RetrieveGSTR3BSA",
            data: { GSTINNo: gstin, Fp: period },
            // dataType: "json",
            success: function (data) {
                $("#partiall").html(data);
                //alert(data);
            }
        });
    }

    $(window).on('load', function () {
        var period = $('#fpsave').val();
        var gstin = $('#gstin').val();
        debugger;
        if (period !="" && gstin != "") {
            Retrieve_GSTR3B_SA(); 
        }

    })

    


