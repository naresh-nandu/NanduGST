@using (Html.BeginForm("GETEWBUserwise", "EWBReport", FormMethod.Post, new { @id = "GETEWBReport", @name = "GETEWBReport" }))
{
    <div id="content">

        <div class="row">
            <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
