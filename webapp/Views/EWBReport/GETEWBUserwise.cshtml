@section pagespecific {

    <script type="text/javascript">

        $('#btngetReport').click(function () {

            var $checkoutForm = $('#GETEWBReport').validate({
                // Rules for form validation
                rules: {

                    strGSTIN: {
                        required: true
                    },
                    reportType: {
                        required: true
                    },
                    strewbNo: {
                        required: true
                    }
                },
                messages: {

                    strGSTIN: {
                        required: 'Please select User GSTIN'
                    },
                    reportType: {
                        required: 'Please select Report Type'
                    },
                    strewbNo: {
                        required: 'Please enter EwbNo/CEwbNo'
                    }

                }
            });
        })

    </script>

}



