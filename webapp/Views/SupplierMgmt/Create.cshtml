<script>
    $(document).ready(function () {
        $('input[type=file]').change(function () {
            var val = $(this).val().toLowerCase();
            var regex = new RegExp("(.*?)\.(csv)$");
            if (!(regex.test(val))) {
                $(this).val('');
                alert('Please select csv file format');
            }
        });
    });
</script> 