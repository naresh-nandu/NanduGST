    function editOrder(SupplierId) {
        debugger;
        swal({
            title: "",
            text: "Are you sure that you want to Edit this Record?",
            type: "warning",
            showCancelButton: true,
            closeOnConfirm: true,
            confirmButtonClass: "btn-danger",
            confirmButtonText: "Edit",
            confirmButtonColor: "#ec6c62"
        },
        function (isConfirm) {
            if (isConfirm) {

                var Id = SupplierId;

                window.location.href = "/SupplierMgmt/Edit/" + Id;

            }
        });
    }

    function deleteOrder(SupplierId) {
        debugger;
        swal({
            title: "",
            text: "Are you sure that you want to delete this Record?",
            type: "warning",
            showCancelButton: true,
            closeOnConfirm: false,
            confirmButtonClass: "btn-danger",
            confirmButtonText: "Delete",
            confirmButtonColor: "#ec6c62"
        },
        function (isConfirm) {
            if (isConfirm) {

                $.ajax({
                    url: "/SupplierMgmt/Delete/",
                    data: { "Id": SupplierId },
                    type: "GET"
                })
                    .done(function (data) {

                        window.location.href = '/SupplierMgmt/Create';

                        sweetAlert
                            ({
                                title: "",
                                text: "Supplier Deleted Successfully",
                                type: "success"
                            },
