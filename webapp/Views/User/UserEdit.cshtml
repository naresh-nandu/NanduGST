                                                    <input type="text" id="username" name="username" placeholder="User Name"  value="@ViewBag.UserName" />
                                                </label>
                                            </section>*@
                                        <section class="col col-4">

                                            <label class="input">
                                                <i class="icon-append fa fa-briefcase" style="color:red;">*</i>
                                                <input type="text" id="designation" name="designation" placeholder="Designation" value="@ViewBag.Designation">
                                            </label>
                                        </section>

                                        <section class="col col-4">
                                            <label class="input">
                                                <i class="icon-append fa fa-envelope" style="color:red;">*</i>
                                                <input type="email" id="email" name="email" placeholder="Email" value="@ViewBag.Email">
                                            </label>
                                        </section>

                                    </div>
                                    <div class="row">
                                        <section class="col col-4">
                                            <label class="input">
                                                <i class="icon-append fa fa-user" style="color:red;">*</i>
                                                <input type="password" id="Password" name="Password" placeholder="Password" value="@ViewBag.Password">
                                            </label>
                                        </section>
                                        <section class="col col-4">
                                            <label class="input">
                                                <i class="icon-append fa fa-phone" style="color:red;">*</i>
                                                <input type="text" id="phone" maxlength="10" name="phone" placeholder="Mobile Number" value="@ViewBag.Mobile">
                                            </label>
                                        </section>

                                        @{Html.RenderPartial("_Usereditrole");}

                                        @if (Session["MakerCheckerApproverSetting"].ToString() == "True")
                                        {
                                            <section class="col col-4">
                                                <label class="input">
                                                    @Html.DropDownList("ddlMakerCheckerApprover", ViewBag.MakerCheckerApproverList as SelectList, "Select", new { @Class = "form-control" })
                                                </label>
                                            </section>
                                        }
                                        else
                                        {
                                            <section class="col col-4" style="display:none;">
                                                <label class="input">
                                                    @Html.DropDownList("ddlMakerCheckerApprover", ViewBag.MakerCheckerApproverList as SelectList, "Select", new { @Class = "form-control" })
                                                </label>
                                            </section>
                                        }

                                        @if (Session["AutoGenInvNoSetting"].ToString() == "True")
                                        {
                                            <section class="col col-4">
                                                <label class="input">
                                                    <input type="text" name="stationcode" id="stationcode" class="form-control" maxlength="6" placeholder="Station Code" value="@ViewBag.StationCode" />
                                                </label>
                                            </section>
                                        }
                                        else
                                        {
                                            <section class="col col-4" style="display:none;">
                                                <label class="input">
                                                    <input type="text" name="stationcode" id="stationcode" class="form-control" placeholder="Station Code" maxlength="6" />
                                                </label>
                                            </section>
                                        }
                                    </div>

                                    <div class="row">
                                        <section class="col col-6">
                                            @{Html.RenderPartial("_gstadd");}

                                        </section>

                                        <section class="col col-6">
                                            @{Html.RenderPartial("_gstdelete");}
                                        </section>
                                    </div>

                                </fieldset>
                                <footer>
                                    <button type="submit" name="btnSave" id="btnSave" class="btn btn-primary">
                                        Save
                                    </button>
                                </footer>
                            </form>



                        </div>
                        <!-- end widget content -->

                    </div>
                    <!-- end widget div -->

                </div>
                <!-- end widget -->

            </article>
            <!-- END COL -->
            <!-- NEW COL START -->
            <!-- END COL -->

        </div>

        <!-- END ROW -->

    </section>
    <!-- end widget grid -->


</div>
