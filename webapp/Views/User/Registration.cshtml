@if (Session["AutoGenInvNoSetting"].ToString() == "True")
{
    <script type="text/javascript">
        $("#btnRegister").click(function () {
            if (document.getElementById('stationcode').value == "") {
                alert('Please Enter Station Code');
                return false;
            }
        });
    </script>
}