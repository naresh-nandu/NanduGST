{
    <script type="text/javascript">
        alert(@Html.Raw(Json.Encode(ViewBag.DownloadResponse)));
    </script>
}

<script type="text/javascript">
    $(document).ready(function () {
        $("#divTOKEN").hide();
        if ($("#action").val() == "FILEDET") {
            $("#divTOKEN").show();
        } else {
            $("#divTOKEN").hide();
        }
        $("#action").change(function () {
            if ($("#action").val() == "FILEDET") {
                $("#divTOKEN").show();
            } else {
                $("#divTOKEN").hide();
            }
        });
    });
</script>
