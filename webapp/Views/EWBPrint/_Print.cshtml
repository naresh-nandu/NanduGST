
<style>
    html, body {
        margin: 0;
        padding: 0;
        height: auto;
        overflow-x: hidden;
    }

    th, td {
        padding: 5px;
        text-align: left;
    }

    .ewbheader {
        padding: 10px;
        text-align: center;
        background-color: #3276b1;
        border: 1px solid #3276b1;
        border-radius: 2px;
        color: white;
        font-weight: bold;
    }
    .ewbheaderdata {
        padding: 10px;
        text-align: center;
       
        border: 1px solid #3276b1;
        border-radius: 2px;
        color: black;
        font-weight: bold;
    }
    .ewbpartA {
        text-align: center;
        background-color: #3276b1;
        border: 1px solid #3276b1;
        border-radius: 2px;
        color: white;
        font-weight: bold;
        margin: 8px;
        padding: 10px;
    }

    .tablepartB {
        margin: 25px;
    }

    .tblheader {
        text-align: center;
        color: white;
        background-color: #85C1E9;
    }

    .tblbody {
        text-align: center;
    }
</style>

<body>
    <tr style="text-align: center;">
        <th align="center">
         
        </th>
    </tr>
    <div style="border:2px solid #3276b1;margin:150px 100px 0px 100px">
        <table style="margin-left:320px">

            <caption class="ewbheaderdata">E-Way Bill</caption>
            <tr>
                <th>
                    @if (ViewBag.QRCodeImage != null)
                    {
                        <img src="@ViewBag.QRCodeImage" />
                    }
                </th>

            </tr>
        </table>

        <table style="width:100%;" cellspacing="1" cellpadding="1" border="0">


            @foreach (var Master in Model.Master)
            {



                <tr>
                    <th width="10%"></th>
                    <th width="35%">E-Way Bill No</th>
                    <th width="2%" align="center">:</th>
                    <th width="13%"></th>
                    <th width="40%">@Master.ewayBillNo</th>

                </tr>
                <tr>
                    <th width="10%"></th>
                    <th width="35%">E-Way Bill Date</th>
                    <th width="2%" align="center">:</th>
                    <th width="13%"></th>
                    <th width="40%">@Master.ewayBillDate</th>
                </tr>
                <tr>
                    <th width="10%"></th>
                    <th width="35%">Generated By</th>
                    <th width="2%" align="center">:</th>
                    <th width="13%"></th>
                    <th width="40%">@Master.fromGstin-@Master.CompanyName</th>
                </tr>
                <tr>
                    <th width="10%"></th>
                    <th width="35%">Valid From</th>
                    <th width="2%" align="center">:</th>
                    <th width="13%"></th>
                    <th width="40%">@Master.ewayBillDate [@Master.transDistance Kms]</th>
                </tr>
                <tr>
                    <th width="10%"></th>
                    <th width="35%">Valid Until</th>
                    <th width="2%" align="center">:</th>
                    <th width="13%"></th>
                    <th width="40%">@Master.validUpto</th>
                </tr>

                <table style="width:100%;" cellspacing="0" cellpadding="0" border="0">

                    <caption class="ewbpartA">PART-A</caption>
                    @{
                        string fromgst = "";
                        fromgst = Master.fromGstin;

                    }
                    <tr>
                        <th width="10%"></th>
                        <th width="35%">GSTIN Of Supplier</th>
                        <th width="2%" align="center">:</th>
                        <th width="13%"></th>
                        @if (Master.fromTrdName != "")
                        {
                            <th width="40%">@fromgst.ToUpper(), @Master.fromTrdName</th>
                        }
                        else
                        {
                            <th width="40%">@fromgst.ToUpper()</th>
                        }
                    </tr>
                    <tr>
                        <th width="10%"></th>
                        <th width="35%">Place of Dispatch</th>
                        <th width="2%" align="center">:</th>
                        <th width="13%"></th>
                        <th width="40%">@Master.fromAddr1 @Master.fromAddr2 @Master.fromPlace @Master.fromPinCode </th>

                    </tr>
                    @{
                        string togst = "";
                        togst = Master.toGstin;

                    }
                    <tr>
                        <th width="10%"></th>
                        <th width="35%">GSTIN Of Recipient</th>
                        <th width="2%" align="center">:</th>
                        <th width="13%"></th>
                        @if (Master.toTrdName != "")
                        {
                            <th width="40%">@togst.ToUpper(), @Master.toTrdName</th>
                        }
                        else
                        {
                            <th width="40%">@togst.ToUpper()</th>
                        }
                    </tr>
                    <tr>
                        <th width="10%"></th>
                        <th width="35%">Place Of Delivery</th>
                        <th width="2%" align="center">:</th>
                        <th width="13%"></th>
                        <th width="40%">@Master.toAddr1 @Master.toAddr2 @Master.toPlace @Master.toPincode </th>
                    </tr>
                    <tr>
                        <th width="10%"></th>
                        <th width="35%">Document No.</th>
                        <th width="2%" align="center">:</th>
                        <th width="13%"></th>
                        <th width="40%">@Master.docNo</th>

                    </tr>
                    <tr>
                        <th width="10%"></th>
                        <th width="35%">Document Date</th>
                        <th width="2%" align="center">:</th>
                        <th width="13%"></th>
                        <th width="40%">@Master.docDate</th>
                    </tr>
                    @{

                        string transType = Master.transactionType;
                        var transactionType = "";
                        switch (transType)
                        {
                            case "1":
                                transactionType = "Regular";
                                break;
                            case "2":
                                transactionType = "Bill To - Ship To";
                                break;
                            case "3":
                                transactionType = "Bill From - Dispatch From";
                                break;
                            case "4":
                                transactionType = "Combination of 2 and 3";
                                break;


                        }
                    }
                    <tr>
                        <th width="10%"></th>
                        <th width="35%">Transaction Type</th>
                        <th width="2%" align="center">:</th>
                        <th width="13%"></th>
                        <th width="40%">@transactionType</th>

                    </tr>
                    @{
                        decimal GoodsValue = 0;
                        GoodsValue = Convert.ToDecimal(Master.totalValue) + Convert.ToDecimal(Master.cgstValue) + Convert.ToDecimal(Master.igstValue) + Convert.ToDecimal(Master.sgstValue) + Convert.ToDecimal(Master.cessValue);
                    }
                    <tr>
                        <th width="10%"></th>
                        <th width="35%">Value of Goods</th>
                        <th width="2%" align="center">:</th>
                        <th width="13%"></th>
                        <th width="40%">@GoodsValue</th>

                    </tr>

                    @foreach (var hsnlist in Model.hsnList)
                    {
                        <tr>
                            <th width="10%"></th>
                            <th width="35%">HSN Code</th>
                            <th width="2%" align="center">:</th>
                            <th width="13%"></th>
                            <th width="40%">

                                @hsnlist.hsnCode-(+@hsnlist.hsnCount)


                            </th>

                        </tr>
                    }



                    @{

                        string supType = Master.supplyType;
                        var supplyType = "";
                        switch (supType)
                        {
                            case "I":
                                supplyType = "Inward";
                                break;
                            case "O":
                                supplyType = "Outward";
                                break;
                        }

                        string subsupType = Master.subSupplyType;
                        var subsupplyType = "";
                        switch (subsupType)
                        {
                            case "1":
                                subsupplyType = "Supply";
                                break;
                            case "2":
                                subsupplyType = "Import";
                                break;
                            case "3":
                                subsupplyType = "Export";
                                break;
                            case "4":
                                subsupplyType = "Job Work";
                                break;
                            case "5":
                                subsupplyType = "For Own Use";
                                break;
                            case "6":
                                subsupplyType = "Job Work Returns";
                                break;
                            case "7":
                                subsupplyType = "Sales Return";
                                break;
                            case "8":
                                subsupplyType = "Others";
                                break;
                            case "9":
                                subsupplyType = "SKD/CKD";
                                break;
                            case "10":
                                subsupplyType = "Line Sales";
                                break;
                            case "11":
                                subsupplyType = "Recipient Not Known";
                                break;
                            case "12":
                                subsupplyType = "Exhibition or Fairs";
                                break;
                        }


                    }
                    <tr>
                        <th width="10%"></th>
                        <th width="35%">Reason for Transportation</th>
                        <th width="2%" align="center">:</th>
                        <th width="13%"></th>
                        <th width="40%">@supplyType-@subsupplyType</th>
                    </tr>
                    <tr>
                        <th width="10%"></th>
                        <th width="35%">Transporter</th>
                        <th width="2%" align="center">:</th>
                        <th width="13%"></th>
                        <th width="40%">@Master.transporterId - @Master.transporterName </th>
                    </tr>
                    @*<tr>
                            <th width="10%"></th>
                            <th width="35%">Transport DocNo & Date</th>
                            <th width="2%" align="center">:</th>
                            <th width="13%"></th>
                            <th width="40%">@Master.transDocNo & @Master.transDocDate</th>
                        </tr>*@
                </table>

            }
            <div class="ewbpartA">PART-B</div>
            <table class="table table-striped table-responsive table-bordered table-hover tablepartB" style="width:95%;" cellspacing="0" cellpadding="0" border="2">

                <thead>
                    <tr style="">
                        <th class="tblheader">Mode</th>
                        <th class="tblheader">Vehicle No/Trans Doc No. & Dt.</th>
                        <th class="tblheader">From</th>
                        <th class="tblheader">Entered Date</th>
                        <th class="tblheader">Entered By</th>
                        <th class="tblheader">CEWB No.(if any)</th>
                        <th class="tblheader">Multi Vehicle Info.(if any)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var Item in Model.MasterList)
                    {
                        string TransMode = Item.TransMode;
                        var Mode = "";
                        switch (TransMode)
                        {
                            case "1":
                                Mode = "Road";
                                break;
                            case "2":
                                Mode = "Rail";
                                break;
                            case "3":
                                Mode = "Air";
                                break;
                            case "4":
                                Mode = "Ship";
                                break;
                        }
                        <tr>
                            <td class="tblbody">@Mode</td>
                            @if (Item.vehicleNo != "")
                            {
                                <td class="tblbody">@Item.vehicleNo - @Item.TransDocNo @Item.TransDocDate</td>
                            }
                            else
                            {
                                <td class="tblbody">@Item.TransDocNo @Item.TransDocDate</td>
                            }
                            <td class="tblbody">@Item.FromPlace</td>

                            @foreach (var List in Model.Master)
                            {
                                <td class="tblbody">@List.ewayBillDate</td>
                                <td class="tblbody">@List.fromGstin</td>

                            }
                            <td class="tblbody">-</td>
                            <td class="tblbody">-</td>
                        </tr>
                    }

                </tbody>


            </table>
            <table style="margin-left:270px">

                
                <tr>
                    <th>
                        @if (ViewBag.imgBarCode != null)
                        {
                            <img src="@ViewBag.imgBarCode" />
                        }
                    </th>

                </tr>
            </table>
    </div>


</body>






