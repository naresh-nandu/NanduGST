
<style>
    html, body {
        margin: 0;
        padding: 0;
        height: auto;
        overflow-x: hidden;
    }

    th, td {
        padding: 5px;
        text-align: left;
    }

    .ewbheader {
        padding: 10px;
        text-align: center;
        background-color: #3276b1;
        border: 1px solid #3276b1;
        border-radius: 2px;
        color: white;
        font-weight: bold;
    }

    .ewbpartA {
        text-align: center;
        background-color: #3276b1;
        border: 1px solid #3276b1;
        border-radius: 2px;
        color: white;
        font-weight: bold;
        margin: 8px;
        padding: 10px;
    }

    .tablepartB {
        margin: 25px;
    }

    .tblheader {
        text-align: center;
        color: white;
        background-color: #85C1E9;
    }

    .tblbody {
        text-align: center;
    }
</style>

<body>

    <div style="border:2px solid #3276b1;margin:150px 100px 0px 100px">
        <table style="width:100%;" cellspacing="1" cellpadding="1" border="0">

            <caption class="ewbheader">Consolidated E-Way Bill</caption>

            @foreach (var Master in Model.ConsolidatedMaster)
            {
                <tr>
                    <th width="10%"></th>
                    <th width="35%">Consolidated E-Way Bill No</th>
                    <th width="2%" align="center">:</th>
                    <th width="13%"></th>
                    <th width="40%">@Master.cewbNo</th>

                </tr>
                        <tr>
                            <th width="10%"></th>
                            <th width="35%">Consolidated E-Way Bill Date</th>
                            <th width="2%" align="center">:</th>
                            <th width="13%"></th>
                            <th width="40%">@Master.cewbDate</th>
                        </tr>
                        <tr>
                            <th width="10%"></th>
                            <th width="35%">Vehichle No</th>
                            <th width="2%" align="center">:</th>
                            <th width="13%"></th>
                            <th width="40%">@Master.vechileNo</th>
                        </tr>
                        <tr>
                            <th width="10%"></th>
                            <th width="35%">From Address</th>
                            <th width="2%" align="center">:</th>
                            <th width="13%"></th>
                            <th width="40%">@Master.fromPlace</th>
                        </tr>



            }
            
            <table class="table table-striped table-responsive table-bordered table-hover tablepartB" style="width:95%;" cellspacing="0" cellpadding="0" border="2">

                <thead>
                    <tr style="">
                        <th class="tblheader">E-Way Bill No</th>
                        <th class="tblheader">E-Way Bill Date</th>
                        <th class="tblheader">Generated By</th>
                        <th class="tblheader">Document No</th>
                        <th class="tblheader">Document Date</th>
                        <th class="tblheader">To Address</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var Item in Model.ConsolidatedMasterList)
                    {
                        <tr>
                            <td class="tblbody">@Item.ewbNo</td>
                            <td class="tblbody">@Item.ewbDate</td>
                            <td class="tblbody">@Item.generatedBy</td>
                            <td class="tblbody">@Item.docNo</td>
                            <td class="tblbody">@Item.docDate</td>
                            <td class="tblbody">@Item.toAddress</td>
                        </tr>
                    }
                </tbody>
            </table>

        </table>

    </div>


</body>






