                                                    <i class="icon-prepend fa fa-user"></i>
                                                    <input type="text" name="name" placeholder="Supplier Name">
                                                </label>
                                            </section>
                                            <section class="col col-4">
                                                <div class="form-group">
                                                    <label>GSTIN</label>

                                                    <div>
                                                        @Html.DropDownList("cgstin", new SelectList(ViewBag.Categories, "CategoryName", "CategoryName"), "Select", new { @Class = "form-control input-sm" })
                                                    </div>
                                                </div>
                                            </section>
                                        </div>
                                        <div class="row">
                                            <section class="col col-4">
                                                <label>Reason code for issuing note</label>@*<span style="color:red">*</span>*@
                                                <label class="input">
                                                    <input type="text" name="rns" placeholder="RNS">
                                                </label>
                                            </section>
                                            <section class="col col-4">
