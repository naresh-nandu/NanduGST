@model WeP_DAL.EwayViewModel


<script type="text/javascript">

    $(document).ready(function () {

        oTableStaticFlow = $('#example').DataTable({
            "aoColumnDefs": [{
                'bSortable': false,
                'aTargets': [0]
            }],
        });

    });

</script>

@*<img src="~/Content/images/loginscreen.png" />
    <img src="~/Content/images/LoginBGBlue.jpg" />*@

<style>
    .bgclass {
        background: url("~/Content/images/LoginBGBlue.jpg") 0 0 no-repeat;
        background-repeat: no-repeat;
        background-size: 100% auto;
        background-position: center top;
        background-attachment: fixed;
    }

    table.dataTable thead .sorting:after {
        opacity: 0 !important;
        content: none !important;
    }

    .dataTables_wrapper .dataTables_filter input {
        margin-left: 0em !important;
    }

    table.gridtable th {
        text-align: center;
        font-weight: bold;
        font-size: 14px;
        color: #3276b1;
    }

    table.gridtable td {
        text-align: center;
    }

    #chkSelectAll {
        margin-left: 4px !important;
    }

    .headerstyle {
        background-color: #cbd2d5 !important;
        color: #000 !important;
        font-weight: bold;
    }
</style>

<!-- MAIN CONTENT -->
<div id="content">

    <div class="row">

        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <h1 class="page-title txt-color-blueDark">

                <!-- PAGE HEADER -->
                <i class="fa-fw fa fa-home"></i>
                EWayBill
                <span>
                    >&nbsp;
                    Dashboard
                </span>

            </h1>
        </div>

    </div>
    <div class="alert alert-block alert-success">
        <form action="@Url.Action("Index", "EWBDashBoard")" method="POST" id="SummaryForm" class="smart-form" autocomplete="off">
            <h4 class="alert-heading"><i class="fa fa-check-square-o"></i>Summary Dashboard</h4>
            <br />
            <div class="row">
                <section class="col col-3">
                    <label class="label" style="font-weight:bold">Period</label>
                    <div class="col-xs-9 col-lg-9 selectContainer">
                        <label class="input">
                            <i class="icon-append fa fa-calendar"></i>
                            <input type="text" name="period" placeholder="" id="period" class="datepicker" data-dateformat='mmyy' value="@ViewBag.Period" onchange="submit();">
                        </label>
                    </div>
                </section>
                <section class="col col-3" style="display:none">
                    <label class="label">GSTIN</label>
                    <div class="col-xs-9 col-lg-9 selectContainer">
                        @Html.DropDownList("gstin", ViewBag.GstinList as SelectList, "ALL", new { @Class = "form-control input-sm ", @autopostback = "true", @id = "ddlGSTINNo", @onchange = "submit();", @style = "" })
                    </div>
                </section>

            </div>


        </form>
    </div>
</div>


<!-- row -->
<div class="row">


    <div class="col-sm-12">

        <div class="well" style="margin:0px 15px 10px 15px;">
            <h1 style="font-family:Sans,Arial,Helvetica,Sans-Serif;"><span class="semi-bold">Eway Bill Summary Status</span> <small></small></h1>
            <ul class="list-inline">
                @foreach (var Item in Model.DashBoardCount)
                {
                    <li style="margin-right:80px;">

                        <div class="easy-pie-chart txt-color-blue easyPieChart" data-percent="@Item.Total_Generate" data-size="150" data-pie-size="180">
                            <span class="percent txt-color-blue font-xl semi-bold">@Item.Total_Generate</span>

                        </div>

                        <h3 style="text-align:center;font-family:Sans,Arial,Helvetica,Sans-Serif" class="txt-color-blue">Generated</h3>
                    </li>
                    <li style="margin-right:80px;">

                            <div class="easy-pie-chart txt-color-purple easyPieChart" data-percent="@Item.Total_Cancelled" data-pie-size="150">
                                <span class="percent txt-color-purple font-xl semi-bold">@Item.Total_Cancelled</span>
                            </div>

                            <h3 style="text-align:center;font-family:Sans,Arial,Helvetica,Sans-Serif" class="txt-color-purple">Cancelled</h3>
                        </li>
                    <li style="margin-right:80px;">

                                <div class="easy-pie-chart txt-color-greenDark easyPieChart" data-percent="@Item.Total_Received" data-pie-size="150">
                                    <span class="percent  txt-color-greenDark font-lg semi-bold">@Item.Total_Received</span>
                                </div>

                                <h3 style="text-align:center;font-family:Sans,Arial,Helvetica,Sans-Serif" class="txt-color-greenDark">Recieved</h3>
                            </li>
                    <li style="margin-right:80px;">

                                <div class="easy-pie-chart txt-color-greenDark easyPieChart" data-percent="@Item.Total_RejectedByMe" data-pie-size="150">
                                    <span class="percent txt-color-greenDark font-lg semi-bold">@Item.Total_RejectedByMe</span>
                                </div>

                                <h3 style="text-align:center;font-family:Sans,Arial,Helvetica,Sans-Serif" class="txt-color-greenDark">Rejected By Me</h3>
                            </li>
                    <li style="margin-right:80px;">

                                <div class="easy-pie-chart txt-color-greenDark easyPieChart" data-percent="@Item.Total_RejectedByCounterParty" data-pie-size="150">
                                    <span class="percent txt-color-greenDark font-lg semi-bold">@Item.Total_RejectedByCounterParty</span>
                                </div>

                                <h3 style="text-align:center;font-family:Sans,Arial,Helvetica,Sans-Serif" class="txt-color-greenDark">Rejected By Counter Party</h3>
                            </li>

                }
            </ul>
        </div>




    </div>
</div>

<div id="content">

    <!-- widget grid -->
    <section id="widget-grid" class="">

        <!-- row -->
        <div class="row">

            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

                <div class="jarviswidget jarviswidget-color-teal" id="wid-id-3" data-widget-editbutton="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Eway Bill Summary Details</h2>

                    </header>
                    <table id="example" class="table table-striped table-responsive table-bordered table-hover gridtable">
                        <thead class="text-center">
                            <tr class="text-center">
                                <th class="text-center" style="font-weight:bold;font-size:16px;">Company Name</th>
                                <th class="text-center" style="font-weight:bold;font-size:16px;">GSTIN</th>
                                <th class="text-center" style="font-weight:bold;font-size:16px;">PAN</th>
                                <th class="text-center" style="font-weight:bold;font-size:16px;">GENERATED</th>
                                <th class="text-center" style="font-weight:bold;font-size:16px;">CANCELLED</th>
                                <th class="text-center" style="font-weight:bold;font-size:16px;">RECIEVED</th>
                                <th class="text-center" style="font-weight:bold;font-size:16px;">REJECT BY ME</th>
                                <th class="text-center" style="font-weight:bold;font-size:16px;">REJECT BY Counter Party</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var List in Model.DashBoardSummary)
                            {
                            <tr>
                                <td>@List.companyName</td>
                                <td>@List.gstinNo</td>
                                <td>@List.panNo</td>
                                <td>@List.Generated</td>
                                <td>@List.Cancel</td>
                                <td>@List.Received</td>
                                <td>@List.RejectedByMe</td>
                                <td>@List.RejectedByCounterParty</td>
                            </tr>
                            }

                        </tbody>
                    </table>



                </div>
                <!-- end widget -->

            </article>
            <!-- WIDGET END -->

        </div>

        <!-- end row -->
        <!-- end row -->

    </section>
    <!-- end widget grid -->

</div>

<!-- WIDGET END -->
