    function editOrder(PANId) {        
        swal({
            title: "",
            text: "Are you sure that you want to Edit this Record?",
            type: "warning",
            showCancelButton: true,
            closeOnConfirm: true,
            confirmButtonClass: "btn-danger",
            confirmButtonText: "Edit",
            confirmButtonColor: "#ec6c62"
        },
        function (isConfirm) {
            if (isConfirm) {

                var Id = PANId;

                window.location.href = "/PanMgmt/Edit/" + Id;

            }
        });
    }

    function deleteOrder(PANId) {
        debugger;
        swal({
            title: "",
            text: "Are you sure that you want to delete this Record?",
            type: "warning",
            showCancelButton: true,
            closeOnConfirm: false,
            confirmButtonClass: "btn-danger",
            confirmButtonText: "Delete",
            confirmButtonColor: "#ec6c62"
        },
        function (isConfirm) {
            if (isConfirm) {

                $.ajax({
                    url: "/PanMgmt/Delete/",
                    data: { "Id": PANId },
                    type: "GET"
                })
                    .done(function (data) {

                        window.location.href = '/PanMgmt/Registration';

                        sweetAlert
                            ({
                                title: "",
                                text: "Deleted Successfully",
                                type: "success"
                            },
                                function () {
                                    //window.location.href = '/BuyerMgmt/Index';
                                });
                    })
                    .error(function (data) {
                        swal("Oops", "We couldn't connect to the server!", "error");
                    });


            }
        });
    }

</script>

