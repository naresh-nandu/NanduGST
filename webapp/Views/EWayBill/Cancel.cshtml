@section pagespecific {
    <script type="text/javascript">

        $('#billno').bind('keypress', numericInput);
        $("#billno").on('blur', function () {

            var txt = $('#billno').val();
            $('#billno').val(txt);
            
        });

        $(document).ready(function () {
           var usergstin = $("#ddlGSTINNo").val();
           $("#billno").autocomplete({

                minlength: 3,
                scroll: true,
                source: function (request, response) {

                    $.ajax({

                        url: "/EWayBill/ewbNoList",
                        type: "POST",
                        dataType: "json",
                        data: { Prefix: request.term, Gstin: usergstin },
                        success: function (data) {

                            response($.map(data, function (item) {



                                return {

                                    label: item.ewbNo,

                                    value: item.ewbNo



                                };

                            }));

                        },
                        messages: {

                            noResults: "", results: "",

                        }

                    });

                }

            });


        })

    </script>
}