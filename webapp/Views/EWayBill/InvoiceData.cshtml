<script>
    function validateCheckBoxes() {
        var isValid = false;
        //alert("Check if any checkbox is not checked...");
        var allRows = document.getElementsByTagName("input");
        for (var i = 0; i < allRows.length; i++) {
            if (allRows[i].type == 'checkbox' && allRows[i].name == 'ids') {
                if (allRows[i].checked == true) {
                    return true;
                }
            }
        }
        return isValid;
    }

    function ShowMessage() {
        if (!validateCheckBoxes()) {
            alert("Please select atleast one checkbox to Update Part-B Details.");
            return false;
        }
        else {
            return confirm('Are you sure to Update Part-B Details?');
        }

    }

</script>

