            if (allRows[i].type == 'checkbox' && allRows[i].name == 'ids') {
                if (allRows[i].checked == true) {
                    return true;
                }

            }
        }
        return isValid;
    }

    function ShowMessage() {
        if (!validateCheckBoxes()) {
            alert("Please select atleast one data to Update VehicleNo.");
            return false;
        }
        else {
            return confirm('Are you sure to Update VehicleNo?');
        }

    }

</script>


