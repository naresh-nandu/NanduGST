<script type="text/javascript">
	$(document).ready(function () {
        $("#divRecType").hide();
	

        if ($("#action").val() == "CHECKSUM" || $("#action").val() == "TDS") {
            $("#divRecType").show();
			
		
		 else {
			$("#divCTIN").hide();
			$("#divSTATECD").hide();
			$("#divREFID").hide();
			$("#divTOKEN").hide();
		}

		$("#action").change(function () {
            if ($("#action").val() == "CHECKSUM" || $("#action").val() == "TDS") {
                $("#divRecType").show();
				
			} else {
                $("#divRecType").hide();
				
			}
		});
	});
</script>