    @section pagespecific{
        <script type="text/javascript">
            // Model i agree button
            $("#i-agree").click(function () {
                var $this = $("#terms");
                if ($this.checked) {
                    $('#myModal').modal('toggle');
                } else {
                    $this.prop('checked', true);
                    $('#myModal').modal('toggle');
                }
            });

            // Validation
            $(function () {


                // Validation
                $("#smart-form-register").validate({
                    // Rules for form validation
                    rules: {
                        GSTINUserName: {
                            required: true
                        },
                        GSTINNo: {
                            required: true,
                            minlength: 15,
