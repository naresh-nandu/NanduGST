<div class="smart-form">
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead>
                <tr>

                    <th>Eway Bill No<span style="color:red">*</span></th>
                    <th>Eway Bill Date</th>
                    <th>Generated By</th>
                    <th>Document No</th>
                    <th>Document Date</th>
                    <th>Taxable Value</th>
                    <th>From Place</th>
                    <th>To Place</th>
            
                </tr>
            </thead>
            <tbody>
                <tr>

                    <td>
                        <label class="input" style="width:auto">

                            <input type="text" name="ewbNo" id="ewbNo" style="width:auto">
                        </label>
                    </td>
                    <td>
                        <label class="input" style="width:auto">
                            <input type="text" name="ewbDate" id="ewbDate" style="width:120px;background-color:#d9d9d9" readonly>
                        </label>
                    </td>
                    <td>
                        <label class="input" style="width:auto">
                            <input type="text" name="generatedBy" id="generatedBy" style="width:120px;background-color:#d9d9d9" readonly>
                        </label>
                    </td>
                    <td>
                        <label class="input" style="width:auto">
                            <input type="text" name="docNo" id="docNo" style="width:120px;background-color:#d9d9d9" readonly>
                        </label>
                    </td>

                    <td>
                        <label class="input" style="width:auto">
                            <input type="text" name="docDate" id="docDate" style="width:120px;background-color:#d9d9d9" readonly>
                        </label>
                    </td>

                    <td>
                        <label class="input" style="width:auto">
                            <input type="text" name="taxVal" id="taxVal"  readonly style="background-color:#d9d9d9;width:120px">
                        </label>
                    </td>
                    <td>
                        <label class="input" style="width:auto">
                            <input type="text" name="fromPlaces"  id="fromPlaces" readonly style="background-color:#d9d9d9;width:120px">
                        </label>
                    </td>

                    <td>
                        <label class="input">
                            <input type="text" name="toPlace" id="toPlace" readonly style="background-color:#d9d9d9;width:120px">
                        </label>
                    </td>

                    
                </tr>
                <tr>
                    <td colspan="13" align="center">
                        <button type="Submit" id="btnAdd" name="Command" class="btn btn-sm btn-success" style="font-weight:bold;Border-radius:10px;width:60px;margin-bottom:3px;padding:3px" value="Add">Add</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
